# SSH 配置文件示例
# 替换为你的实际服务器信息

# 服务器1配置
Host myserver1
    HostName 192.168.1.100
    Port 22
    User your_username
    IdentityFile ~/.ssh/id_rsa
    ServerAliveInterval 60
    ServerAliveCountMax 3

# 服务器2配置（如果有多个服务器）
Host myserver2
    HostName your-domain.com
    Port 22
    User your_username
    IdentityFile ~/.ssh/id_rsa
    ServerAliveInterval 60
    ServerAliveCountMax 3

# 生产环境服务器
Host production
    HostName your-production-server.com
    Port 22
    User deploy_user
    IdentityFile ~/.ssh/production_key
    ServerAliveInterval 60
    ServerAliveCountMax 3 